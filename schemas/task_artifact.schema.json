{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://at/schemas/task_artifact.schema.json",
  "title": "task artifact (at)",
  "description": "Schema for implementor/tests-builder task artifacts (YAML that validates as JSON).",
  "type": "object",
  "required": ["version", "task_id", "status", "summary", "changed_files"],
  "additionalProperties": true,
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "task_id": { "type": "string", "minLength": 1, "description": "Task ID from planning/actions.json" },
    "status": { "type": "string", "enum": ["completed", "failed", "partial"] },
    "summary": { "type": "string", "minLength": 1 },
    "changed_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "action"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "action": { "type": "string", "enum": ["created", "modified", "deleted"] }
        }
      }
    },
    "acceptance_criteria_results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["passed", "failed", "skipped"] },
          "notes": { "type": "string" }
        }
      }
    },
    "errors": { "type": "array", "items": { "type": "string" } },
    "warnings": { "type": "array", "items": { "type": "string" } },
    "deviations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criterion_id", "justification", "type", "acceptable"],
        "properties": {
          "criterion_id": { "type": "string", "minLength": 1 },
          "expected": { "type": "string" },
          "actual": { "type": "string" },
          "justification": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "enum": ["convention_compliance", "api_change", "scope_change", "design_decision", "other"] },
          "acceptable": { "type": "boolean" }
        }
      }
    }
  }
}

